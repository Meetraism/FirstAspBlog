@page
@model CodeYad_Blog.Web.Pages.Auth.LoginModel
@{
    Layout = "Shared/_AuthLayout";
    ViewData["Title"] = "ورود به سایت";
}
<form method="post">
    <h1>@ViewData["Title"]</h1>
    <div>
        <input type="text" placeholder="نام کاربری" required="" id="username" asp-for="UserName" />
        <span asp-validation-for="UserName" class="alert-danger"></span>
    </div>
    <div>
        <input type="password" placeholder="کلمه عبور" required="" id="password" asp-for="Password"/>
        <span asp-validation-for="Password" class="alert-danger"></span>
    </div>
    <div>
        <input type="submit" value="ورود" />
        <a href="#">فراموشی کلمه عبور</a>
        <a asp-page="Register">ثبت نام</a>
    </div>
</form>