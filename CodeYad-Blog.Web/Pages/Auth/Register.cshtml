@page
@model CodeYad_Blog.Web.Pages.Auth.RegisterModel
@{
    Layout = "Shared/_AuthLayout";
    ViewData["Title"] = "ثبت نام";
}
<form method="post">
    <h1>@ViewData["Title"]</h1>
    <div>
        <input type="text" asp-for="FullName" placeholder="نام و نام خانوادگی" />
        <span style="color: palevioletred" asp-validation-for="FullName"></span>
    </div>
    <div>
        <input type="text" asp-for="UserName" placeholder="نام کاربری" required="" id="username" />
        <span style="color: palevioletred" asp-validation-for="UserName"></span>
    </div>
    <div>
        <input type="password" asp-for="Password" placeholder="کلمه عبور" required="" id="password" />
        <span style="color: palevioletred" asp-validation-for="Password"></span>
    </div>
    <div>
        <input type="submit" value="ثبت نام" />
        <a href="#">فراموشی کلمه عبور</a>
        <a asp-page="Login">ورود</a>
    </div>
</form>
